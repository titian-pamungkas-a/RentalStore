@{
    ViewData["Title"] = "Rental Input";
}
@model RentalStore.DTOs.RentalInputDTO

<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

<form asp-controller="Home" asp-action="SubmitInput" method="post">
    <div class="form-group mb-2">
        <label asp-for="UserId" >Select User : </label>
        <select asp-for="UserId" asp-items="@ViewBag.UserList" class="form-control"></select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="FilmId">Select Film : </label>
        <select asp-for="FilmId" asp-items="@ViewBag.FilmList" class="form-control"></select>
        <span asp-validation-for="FilmId" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="RentalDate">Rental Date</label>
        <input asp-for="RentalDate" class="form-control" type="date" />
        <span asp-validation-for="RentalDate" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="DeadlineDate">Deadline Date</label>
        <input asp-for="DeadlineDate" class="form-control" type="date" />
        <span asp-validation-for="DeadlineDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}