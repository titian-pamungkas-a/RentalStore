@{
    ViewData["Title"] = "User Input";
}
@model RentalStore.DTOs.UserInputDTO

<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

<form asp-controller="Home" asp-action="SubmitUserInput" method="post">
    <div class="form-group mb-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" type="text" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="AddressName"></label>
        <input asp-for="AddressName" class="form-control" type="text" />
        <span asp-validation-for="AddressName" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="AddressNumber"></label>
        <input asp-for="AddressNumber" class="form-control" type="text" />
        <span asp-validation-for="AddressNumber" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="CityId">Select City : </label>
        <select asp-for="CityId"  asp-items="@ViewBag.CityList" class="form-control"></select>
        <span asp-validation-for="CityId" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="GenderUser">Select Gender : </label>
        <select asp-for="GenderUser" asp-items="@ViewBag.Gender" class="form-control"></select>
        <span asp-validation-for="GenderUser" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}